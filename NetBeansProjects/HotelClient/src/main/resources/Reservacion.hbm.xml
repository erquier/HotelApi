<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "com.mycompany.mavenproject1.Cliente" table = "reservacion">
      
      <meta attribute = "class-description">
         reservacion. 
      </meta>
      
      <id name = "idreserva" type = "int" column = "idreserva">
         <generator class="native"/>
      </id>
      
      <property name = "idcliente" column = "idcliente" type = "int"/>     
      <property name = "fechallegada" column = "fechallegada" type = "date"/>
      <property name = "fechasalida" column = "fechasalida" type = "date"/>
   </class>
</hibernate-mapping>

